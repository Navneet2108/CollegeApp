<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.collegeapp.ui.InfoActivity">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <TextView
        android:id="@+id/textViewtitle"
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:textAlignment="center"
        android:text="COLLEGE DETAILS"
        android:textStyle="bold"
        android:textColor="@color/colorBlack"
        android:textSize="20dp"
        tools:layout_editor_absoluteX="220dp"
        tools:layout_editor_absoluteY="160dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="About College"
            android:layout_marginTop="16dp"
            android:textSize="20dp"
            android:textColor="@color/colorBlack"
            android:textStyle="italic"/>


        <EditText
            android:id="@+id/editTextinfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/colorBlack"
            android:textSize="20dp"
            android:hint="Enter college info"
            android:inputType="textMultiLine" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/textViewDeadline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Deadline"
            android:textColor="@color/colorBlack"
            android:textStyle="italic"
            android:textSize="20dp"
            tools:layout_editor_absoluteX="135dp"
            tools:layout_editor_absoluteY="166dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/NewDeadline"
                android:layout_width="209dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/customborder"
                android:gravity="center"
                android:hint="For New Student"
                android:textColor="@color/colorBlack"
                android:textSize="16dp"
                android:textStyle="italic"
                tools:layout_editor_absoluteX="135dp"
                tools:layout_editor_absoluteY="166dp" />

            <Button
                android:id="@+id/newdate"
                android:layout_width="193dp"
                android:layout_height="wrap_content"
                android:text="date" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/transferDeadline"
                android:layout_width="205dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/customborder"
                android:gravity="center"
                android:hint="For Transfer Student"
                android:textAlignment="center"
                android:textColor="@color/colorBlack"
                android:textSize="16dp"
                android:textStyle="italic"
                tools:layout_editor_absoluteX="135dp"
                tools:layout_editor_absoluteY="166dp" />

            <Button
                android:id="@+id/transferdate"
                android:layout_width="196dp"
                android:layout_height="wrap_content"
                android:text="date" />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/textViewTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/colorBlack"
            android:text="Fees Info"
            android:textStyle="italic"/>
        <EditText
            android:id="@+id/newStudent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:textStyle="normal"
            android:hint="For New Student"
            android:textSize="20dp"
            android:textColor="@color/colorBlack"
            android:layout_marginTop="10dp"/>
        <EditText
            android:id="@+id/transferStudent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:textStyle="normal"
            android:textSize="20dp"
            android:hint="For Transfer Student "
            android:textColor="@color/colorBlack"
            android:layout_marginTop="10dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <TextView
        android:id="@+id/contactUs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_marginTop="16dp"
        android:textColor="@color/colorBlack"
        android:text="Contact"
        android:textStyle="italic"/>
        <EditText
            android:id="@+id/editTextphone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/colorBlack"
            android:inputType="phone"
             />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/Address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_marginTop="16dp"
            android:textColor="@color/colorBlack"
            android:text="Address"
            android:textStyle="italic"/>
        <EditText
            android:id="@+id/editTextAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:textColor="@color/colorBlack"
            android:inputType="textPersonName"
             />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/website"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_marginTop="16dp"
            android:textColor="@color/colorBlack"
            android:text="Website"
            android:textStyle="italic"/>
    <EditText
        android:id="@+id/editTextWebsite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:textSize="20dp"
        android:layout_marginTop="16dp"
        android:textColor="@color/colorBlack"
        android:inputType="textEmailAddress"
         />

    </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">
    <Button
        android:id="@+id/buttonSave"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textSize="20dp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="100dp"
        android:textColor="@color/colorBlack"
        android:text="Save"
        android:background="@color/colorPrimary"
        android:textStyle="bold"/>
            <Button
                android:id="@+id/buttonback"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="20dp"
                android:layout_marginTop="16dp"
                android:textColor="@color/colorBlack"
                android:layout_marginLeft="16dp"
                android:text="Back"
                android:background="@color/colorPrimary"
                android:textStyle="bold"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>

</LinearLayout>
